{% extends 'base.html.twig' %}

{% block title %}Liste d'Exercices{% endblock %}

{% block body %}
<div class="container">
    <a href="{{ path('app_accueil') }}" class="back-link">← Accueil</a>

    <h1 class="page-title">Liste d'Exercices</h1>

    <div class="patient-info">
        <h2>Patient : {{ patient.nom }}</h2>
    </div>

    <h3>Choisissez les exercices à attribuer :</h3>
    <ul id="exercicesContainer" data-patientId={{ patient.id }} class="exercise-list">
        {% for exercice in exercices %}
            {% if exercice not in exercicesass %}
                <li class="exercise-item" id="exercice-{{ exercice.id }}">
                    <span class="exercise-name">{{ exercice.nom }}</span>
                    <a href="{{ path ('exercice_attribuer_action', {"patientId": patient.id, "exerciceId": exercice.id})}}"><button class="assign-btn">Assigner</button></a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
    <a href="{{ path('app_creation_exercice') }}" class="action-link">Enregistrer un nouvel exercice</a>

    <h3>Exercices déjà assignés :</h3>
    <ul class="assigned-exercise-list">
        {% for exerciceass in exercicesass %}
            <li class="assigned-exercise-item">{{ exerciceass.nom }}
                <a href="{{ path ('exercice_supprimer_patient', {"patientId": patient.id, "exerciceId": exerciceass.id})}}"><button class="assign-btn">Supprimer</button></a>
                </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
