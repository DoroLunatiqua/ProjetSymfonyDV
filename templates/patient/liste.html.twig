{% extends 'base.html.twig' %}

{% block title %}Liste de vos Patients{% endblock %}

{% block body %}
<div class="container">
    <a href="{{ path('app_accueil') }}" class="back-link">← Accueil</a>
    <h1 class="page-title">Liste de vos Patients</h1>

    <ul class="patient-list">
        {% for patient in patients %}
            <li class="patient-item">
                <span class="patient-name">{{ patient.nom }}</span>
                <a href="{{ path('exercice_attribuer', {id: patient.id}) }}" class="btn assign-btn">Attribuer Exercices</a>
            </li>
        {% endfor %}
    </ul>
     <a href="{{ path('app_enregistrement_patient') }}" class="action-link">Enregister un nouveau patient</a>
</div>
{% endblock %}

